pipeline {
   agent any

   tools {
      // Install the Maven version configured as "M3" and add it to the path.
      maven "maven_3.8.1"
      jdk "java"
   }
    triggers {
        cron('0 2 * * *')
    }
    parameters {
        gitParameter branchFilter: 'origin/(.*)', defaultValue: 'develop', name: 'BRANCH', type: 'PT_BRANCH'
        choice(name:'BROWSER', choices:['chrome', 'firefox', 'safari'], description: 'Choose browser for testing')
        choice(name:'SUITE', choices:['ui', 'api'], description: 'Choose suite for testing')
        booleanParam(defaultValue: true, description: 'Headless mode', name: 'HEADLESS')
        string(name: 'DEPLOY_ENV', defaultValue: 'staging', description: '')
    }

   stages {
      stage('Testing') {
         steps {
            git branch: "${params.BRANCH}", url: 'https://github.com/Kugel-F/qase-diploma.git'
            sh "mvn -Dmaven.test.failure.ignore=true -Dbrowser={params.BROWSER} -Dsuite={params.SUITE}
            -Dsurefire.suiteXmlFiles=src/test/resources/testng-suite.xml clean test"

            // To run Maven on a Windows agent, use
//             bat "mvn -Dmaven.test.failure.ignore=true -Dbrowser=chrome -Dsurefire.suiteXmlFiles=src/test/resources
//             /testng-smoke.xml clean test"
         }

         post {
            success {
               junit '**/target/surefire-reports/TEST-*.xml'
            }
         }
      }
      stage('Reporting') {
         steps {
             script {
                     allure([
                             includeProperties: false,
                             jdk: '',
                             properties: [],
                             reportBuildPolicy: 'ALWAYS',
                             results: [[path: 'target/allure-results']]
                     ])
             }
         }
      }
   }
}