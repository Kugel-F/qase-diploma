<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="SmokeTest" parallel="tests" thread-count="3">

    <test name="UI-firefox-testing">
        <parameter name="suite" value="">"ui"</parameter>
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="tests.ui.LoginTest"/>
            <class name="tests.ui.ProjectsTest"/>
            <class name="tests.ui.SuiteTest"/>
            <class name="tests.ui.CaseTest"/>
        </classes>
    </test>
    <test name="UI-chrome-testing">
        <parameter name="suite" value="">"ui"</parameter>
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="tests.ui.LoginTest"/>
            <class name="tests.ui.ProjectsTest"/>
            <class name="tests.ui.SuiteTest"/>
            <class name="tests.ui.CaseTest"/>
        </classes>
    </test>
    <test name="UI-safari-testing">
        <parameter name="suite" value="">"ui"</parameter>
        <parameter name="browser" value="safari"/>
        <classes>
            <class name="tests.ui.LoginTest"/>
            <class name="tests.ui.ProjectsTest"/>
            <class name="tests.ui.SuiteTest"/>
            <class name="tests.ui.CaseTest"/>
        </classes>
    </test>
    <test name="API-ProjectTest">
        <classes>
            <class name="tests.api.ProjectTest"/>
        </classes>
    </test>
    <test name="API-CasesTest">
        <classes>
            <class name="tests.api.CasesTest"/>
        </classes>
    </test>
    <test name="API-SuiteTest">
        <classes>
            <class name="tests.api.SuiteTest"/>
        </classes>
    </test>
    <test name="API-RunTest">
        <classes>
            <class name="tests.api.RunTest"/>
        </classes>
    </test>
</suite>