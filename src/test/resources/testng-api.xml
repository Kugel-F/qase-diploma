<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="SmokeTest" parallel="tests" thread-count="3">

    <test name="Firefox testing">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="tests.api.RunTest"/>
            <class name="tests.api.SuiteTest"/>
            <class name="tests.api.CasesTest"/>
            <class name="tests.api.ProjectTest"/>
        </classes>
    </test>
    <test name="Chrome testing">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="tests.api.RunTest"/>
            <class name="tests.api.SuiteTest"/>
            <class name="tests.api.CasesTest"/>
            <class name="tests.api.ProjectTest"/>
        </classes>
    </test>
    <test name="Safari testing">
        <parameter name="browser" value="safari"/>
        <classes>
            <class name="tests.api.RunTest"/>
            <class name="tests.api.SuiteTest"/>
            <class name="tests.api.CasesTest"/>
            <class name="tests.api.ProjectTest"/>
        </classes>
    </test>
</suite>